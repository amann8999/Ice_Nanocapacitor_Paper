#../Bias3.0/ts_au_layer.TSHS 3. eV
#../Bias4.0/ts_au_layer.TSHS 4. eV
#%endblock

%block TBT.Contours
  IV
%endblock
%block TBT.Contour.IV
   from -5 eV to +5 eV
     delta 0.05 eV
      method mid-rule
%endblock

TBT.CDF.MPI true

